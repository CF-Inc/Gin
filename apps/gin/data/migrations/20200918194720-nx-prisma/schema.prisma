generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = "***"
}

model User {
  id           String   @id @default(cuid())
  username     String   @unique
  password     String
  hostedGame   Game?    @relation("host", fields: [hostedGameId], references: [id])
  hostedGameId String?
  game         Game?    @relation(name: "users", fields: [gameId], references: [id])
  gameId       String?
  gameHand     String[]
  gameScore    Int      @default(0)
}

model Game {
  id      String   @id @default(cuid())
  name    String
  host    User     @relation(name: "host")
  users   User[]   @relation(name: "users")
  deck    String[]
  discard String[]
}
