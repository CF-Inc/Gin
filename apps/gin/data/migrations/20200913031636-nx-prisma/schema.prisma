generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = "***"
}

model User {
  id        String   @id @default(cuid())
  username  String   @unique
  password  String
  game      Game?    @relation(fields: [gameId], references: [id])
  gameId    String?
  gameHand  String[]
  gameScore Int      @default(0)
}

model Game {
  id      String   @id @default(cuid())
  users   User[]   @relation
  deck    String[]
  discard String[]
}

model Session {
  id      String   @id
  sid     String   @unique
  data    String
  expires DateTime
}
